# Screens
<FRDScreenManager>:
    FRDMain:
    FRDBrowse:


<FRDMain>:
    name: 'main'

    AnchorLayout:
        canvas.before:
            Color:
                rgb: app.dark_purple
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: [None, None]
            size: 450, 550
            spacing: 20

            Label:
                text: 'FaceRig Downloader'
                font_size: 45
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 10
                        origin: self.center
                canvas.after:
                    PopMatrix

            FRDButton:
                text: 'Browse some avatars'
                font_size: 25
                on_release:
                    app.root.transition.direction = 'left'
                    app.root.current = 'browse'

            FRDButton:
                text: 'Exit'
                font_size: 25
                on_release: app.stop()


<FRDBrowse>:
    name: 'browse'
    general_width: 750

    sort: 'trend'
    search: ''
    page: 1
    amount: 30
    days: 7

    on_page:
        page.text = f'Page {self.page}'

    ScrollView:
        do_scroll_x: False
        scroll_timeout: 1000
        scroll_distance: 0
        scroll_wheel_distance: 40
        smooth_scroll_end: 10
        scroll_type: ['bars']
        bar_color: app.pink[:3] + [.9]
        bar_inactive_color: app.pink[:3] + [.2]
        bar_width: 8

        BoxLayout:
            id: container

            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 0, 40
            spacing: 20

            BoxLayout:
                id: control_panel

                canvas.before:
                    Color:
                        rgba: app.dark_purple
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: 50
                width: root.general_width

                FRDButton:
                    size_hint_x: .1
                    font_size: 18
                    text: 'Back'
                    on_release:
                        app.root.transition.direction = 'right'
                        app.root.current = 'main'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .21

                    TextInput:
                        id: search_input
                        # todo if this input clear and the button Search was pressed change root.search to ''

                        background_color: app.dark_purple
                        multiline: False
                        foreground_color: [1] * 4
                        cursor_color: app.pink
                        hint_text: 'Search'
                        size_hint_y: None
                        height: 30

                    FRDButton:
                        w: 1
                        text: 'Search'
                        pos_hint: {'center_x': 0.5}
                        size_hint_x: .6

                        on_release:
                            root.search = search_input.text
                            root.page = 1
                            root.update_grid()

                Label:
                    id: page_info

                    color: [1] * 3 + [0.6]
                    size_hint_x: .12
                    text: f'showed 1-30\nitems'
                    halign: 'center'
                    font_size: 12

                Label:
                    size_hint_x: .08
                    text: 'Sort by:'
                    font_size: 13

                FRDSpinner:
                    vals: {'Most Popular': 'trend', 'Most Recent': 'mostrecent', 'Most Subscribed': 'totaluniquesubscribers'}

                    size_hint_x: .17
                    text: 'Most Popular'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Most Popular', 'Most Recent', 'Most Subscribed'

                    on_text:
                        print(f'text of {self} changed')
                        root.sort = self.vals.get(self.text)
                        root.page = 1
                        root.update_grid()

                # todo make part with time period disappear or visually disabled when "Sort by:" don't equal to "trend"
                Label:
                    size_hint_x: .15
                    text: 'Over time period:'
                    font_size: 13

                FRDSpinner:
                    vals: {'Today': 1, 'One Week': 7, 'Three Months': 90, 'Six Months': 180, 'One Year': 365, 'All Time': -1}

                    size_hint_x: .17
                    text: 'Today'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Today', 'One Week', 'Three Months', 'Six Months', 'One Year', 'All Time'

                    on_text:
                        print(f'text of {self} changed')
                        root.days = self.vals.get(self.text)
                        root.page = 1
                        root.update_grid()

            GridLayout:
                id: items

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: self.minimum_height
                width: root.general_width
                cols: 3

                on_kv_post: root.update_grid()

            BoxLayout:
                id: page_control
                # todo make possibility to enter page manually

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: 50
                width: root.general_width / 2

                FRDButton:
                    text: '<'
                    font_size: 25
                    size_hint_x: .3

                    on_release:
                        root.page -= 1
                        root.update_grid()

                Label:
                    id: page

                    text: 'Page 1'
                    font_size: 18

                FRDButton:
                    text: '>'
                    font_size: 25
                    size_hint_x: .3

                    on_release:
                        root.page += 1
                        root.update_grid()


# Widgets
<FRDButton>:
    # var w is used to scale button borders
    w: 2

    canvas:
        Color:
            rgba: app.pink
        Line:
            width: self.w
            joint: 'miter'
            rectangle: self.x + self.w, self.y + self.w, self.width - self.w * 2, self.height - self.w * 2

    background_normal: ''
    background_color: app.dark_purple


<FRDSpinnerOption>:
    canvas:
        Color:
            rgba: app.light_blue
        Line:
            points: self.pos[0], self.pos[1] + self.height, self.pos[0] + self.width, self.pos[1] + self.height

    background_normal: ''
    background_color: app.dark_purple
    font_size: 13
    height: 28


<FRDItem>:
    # todo fix positioning of tiles if the title or author strings are too big
    # place your image here in case if the image or rating of item hasn't downloaded
    logo: 'img/noimg.gif' # can be a link
    rating: 'img/norating.png' # for example: 'https://images.com/img.png
    title: 'default title'
    author: 'default author'
    item_id: 0

    orientation: 'vertical'
    padding: 20
    size_hint_y: None
    height: self.minimum_height

    AsyncImage:
        source: root.logo
        size_hint_y: None
        height: self.width

    AsyncImage:
        source: root.rating
        size_hint: None, None
        height: 30

    Label:
        text: root.title
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        font_size: 18

    Label:
        text: root.author
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        color: [1] * 3 + [0.6]

    # spacing widget
    Widget:
        size_hint_y: None
        height: 10

    FRDButton:
        text: 'Add to collection'
        size_hint_y: None
        height: 40


<FRDPopup>:
    text: 'Default Message'

    title: 'Default Title'
    title_size: 18
    separator_color: app.pink
    background: 'img/DB_color.png'
    size_hint: (None, None)
    size: (400, 140)

    Label:
        text: root.text
