# Screens
<FRDScreenManager>:
    FRDMain:
    FRDBrowse:


<FRDMain>:
    name: 'main'

    AnchorLayout:
        canvas.before:
            Color:
                rgb: app.dark_purple
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: [None, None]
            size: 450, 550
            spacing: 20

            Label:
                text: 'FaceRig Downloader'
                font_size: 45
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 10
                        origin: self.center
                canvas.after:
                    PopMatrix

            FRDButton:
                text: 'Browse some avatars'
                font_size: 25
                on_release:
                    app.root.transition.direction = 'left'
                    app.root.current = 'browse'

            FRDButton:
                text: 'Exit'
                font_size: 25
                on_release: app.stop()


<FRDBrowse>:
    name: 'browse'
    general_width: 750

    ScrollView:
        do_scroll_x: False
        scroll_timeout: 1000
        scroll_distance: 0
        scroll_wheel_distance: 40
        smooth_scroll_end: 10
        scroll_type: ['bars']
        bar_color: app.pink[:3] + [.9]
        bar_inactive_color: app.pink[:3] + [.2]
        bar_width: 8

        BoxLayout:
            id: container

            canvas.before:
                Color:
                    rgba: .4, .1, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 0, 80
            spacing: 20

            BoxLayout:
                id: control_panel

                canvas.before:
                    Color:
                        rgba: app.dark_purple
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: 50
                width: root.general_width

                FRDButton:
                    size_hint_x: .1
                    font_size: 18
                    text: 'Back'
                    on_release:
                        app.root.transition.direction = 'right'
                        app.root.current = 'main'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .21

                    TextInput:
                        background_color: app.dark_purple
                        multiline: False
                        foreground_color: [1] * 4
                        cursor_color: app.pink
                        hint_text: 'Search'
                        size_hint_y: None
                        height: 30

                    FRDButton:
                        w: 1
                        text: 'Search'
                        pos_hint: {'center_x': 0.5}
                        size_hint_x: .6

                Label:
                    amount: 610
                    first: 1
                    last: 30

                    color: [1] * 3 + [0.6]
                    size_hint_x: .12
                    text: f'showed {self.first}-{self.last}\nitems of {self.amount}'
                    font_size: 12

                Label:
                    size_hint_x: .08
                    text: 'Sort by:'
                    font_size: 13

                FRDSpinner:
                    size_hint_x: .17
                    text: 'Most Popular'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Most Popular', 'Most Recent', 'Most Subscribed'

                    on_text: print(f'text of {self} changed')

                Label:
                    size_hint_x: .15
                    text: 'Over time period:'
                    font_size: 13

                FRDSpinner:
                    size_hint_x: .17
                    text: 'Today'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Today', 'One Week', 'Three Months', 'Six Months', 'One Year', 'All Time'

                    on_text: print(f'text of {self} changed')

            GridLayout:
                id: items

                canvas.before:
                    Color:
                        rgba: .5, .1, .6, .3
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: self.minimum_height
                width: root.general_width
                cols: 3

                # little kludge to make first 2 tiles normal size
                Widget:
                Widget:
                Widget:


# Widgets
<FRDButton>:
    # var w is used to scale button borders
    w: 2

    canvas:
        Color:
            rgba: app.pink
        Line:
            width: self.w
            joint: 'miter'
            rectangle: self.x + self.w, self.y + self.w, self.width - self.w * 2, self.height - self.w * 2

    background_normal: ''
    background_color: app.dark_purple


<FRDSpinnerOption>:
    canvas:
        Color:
            rgba: app.light_blue
        Line:
            points: self.pos[0], self.pos[1] + self.height, self.pos[0] + self.width, self.pos[1] + self.height

    background_normal: ''
    background_color: app.dark_purple
    font_size: 13
    height: 28
