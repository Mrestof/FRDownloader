# Screens
<FRDScreenManager>:
    FRDMain:
    FRDSettings:
    FRDBrowse:


<FRDMain>:
    name: 'main'

    AnchorLayout:
        canvas.before:
            Color:
                rgb: app.dark_purple
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: [None, None]
            size: 450, 550
            spacing: 20

            Label:
                text: 'FaceRig Downloader'
                font_size: 45
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 10
                        origin: self.center
                canvas.after:
                    PopMatrix

            FRDButton:
                text: 'Browse some avatars'
                font_size: 25

                on_release:
                    app.root.transition.direction = 'left'
                    app.root.current = 'browse'

            BoxLayout:
                spacing: 20

                FRDButton:
                    text: 'Settings'
                    font_size: 25

                    on_release:
                        app.root.transition.direction = 'left'
                        app.root.current = 'settings'

                FRDButton:
                    text: 'Exit'
                    font_size: 25

                    on_release: app.stop()


<FRDBrowse>:
    name: 'browse'
    general_width: 750

    sort: 'trend'
    search: ''
    page: 1
    last_page: 0
    amount: 30
    days: 7

    on_page:
        page.text = f'Page {self.page} of {self.last_page}'

    ScrollView:
        do_scroll_x: False
        scroll_timeout: 1000
        scroll_distance: 0
        scroll_wheel_distance: 40
        smooth_scroll_end: 10
        scroll_type: ['bars']
        bar_color: app.pink[:3] + [.9]
        bar_inactive_color: app.pink[:3] + [.2]
        bar_width: 8

        BoxLayout:
            id: container

            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 0, 40
            spacing: 20

            BoxLayout:
                id: control_panel

                canvas.before:
                    Color:
                        rgba: app.dark_purple
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': .5}
                height: 50
                width: root.general_width
                spacing: 8

                FRDButton:
                    size_hint_x: .1
                    font_size: 18
                    text: 'Back'

                    on_release:
                        app.root.transition.direction = 'right'
                        app.root.current = 'main'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .21

                    FRDTextInput:
                        id: search_input

                        hint_text: 'Search'
                        size_hint_y: None
                        height: 30

                    BoxLayout:
                        FRDButton:
                            w: 1
                            text: 'Search'
                            size_hint_x: .6

                            on_release:
                                root.search = search_input.text
                                root.page = 1
                                root.update_grid()
                                page.text = f'Page {root.page} of {root.last_page}'

                        FRDButton:
                            w: 1
                            text: 'Clear'
                            size_hint_x: .4

                            on_release:
                                search_input.text = ''
                                root.search = ''
                                root. page = 1
                                root.update_grid()
                                page.text = f'Page {root.page} of {root.last_page}'

                Label:
                    id: page_info

                    color: [1] * 3 + [.6]
                    size_hint_x: .12
                    text: f'showed\n1-30\nitems'
                    halign: 'center'
                    font_size: 12

                Label:
                    size_hint_x: .08
                    text: 'Sort by:'
                    font_size: 13

                FRDSpinner:
                    vals: {'Most Popular': 'trend', 'Most Recent': 'mostrecent', 'Most Subscribed': 'totaluniquesubscribers'}

                    size_hint_x: .17
                    text: 'Most Popular'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Most Popular', 'Most Recent', 'Most Subscribed'

                    on_text:
                        if self.text == 'Most Popular': otp.disabled, otp_spin.disabled = False, False
                        else: otp.disabled, otp_spin.disabled = True, True
                        root.sort = self.vals.get(self.text)
                        root.search = search_input.text
                        root.page = 1
                        root.update_grid()

                Label:
                    id: otp

                    size_hint_x: .15
                    text: 'Over time period:'
                    font_size: 13

                FRDSpinner:
                    id: otp_spin
                    vals: {'Today': 1, 'One Week': 7, 'Three Months': 90, 'Six Months': 180, 'One Year': 365, 'All Time': -1}

                    size_hint_x: .17
                    text: 'One Week'
                    font_size: 15
                    color: app.pink
                    background_normal: ''
                    background_color: app.dark_purple
                    values: 'Today', 'One Week', 'Three Months', 'Six Months', 'One Year', 'All Time'

                    on_text:
                        root.days = self.vals.get(self.text)
                        root.search = search_input.text
                        root.page = 1
                        root.update_grid()

            GridLayout:
                id: items

                size_hint: None, None
                pos_hint: {'center_x': .5}
                height: self.minimum_height
                width: root.general_width
                cols: 3

                on_kv_post:
                    root.update_grid()
                    page.text = f'Page {root.page} of {root.last_page}'

            BoxLayout:
                size_hint: None, None
                pos_hint: {'center_x': .5}
                size: self.minimum_width, 30
                spacing: 10

                Label:
                    text: 'Enter page manually: '
                    size_hint_x: None
                    width: self.texture_size[0]

                FRDTextInput:
                    id: page_input

                    pos_hint: {'center_y': .5}
                    size_hint_x: None
                    width: 42
                    hint_text: '###'

                FRDButton:
                    text: 'Go'
                    size_hint_x: None
                    width: 60

                    on_release:
                        root.go_to(page_input.text)
                        page_input.text = ''

            BoxLayout:
                id: page_control

                size_hint: None, None
                pos_hint: {'center_x': .5}
                height: 50
                width: root.general_width / 2

                FRDButton:
                    id: prev_page

                    text: '<'
                    font_size: 25
                    size_hint_x: .3

                    on_release:
                        root.page -= 1
                        root.update_grid()

                Label:
                    id: page

                    text: 'Page UNDEFINED'
                    font_size: 18

                FRDButton:
                    id: next_page

                    text: '>'
                    font_size: 25
                    size_hint_x: .3

                    on_release:
                        root.page += 1
                        root.update_grid()


<FRDSettings>:
    name: 'settings'

    AnchorLayout:
        anchor_y: 'top'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 800, self.minimum_height
            padding: 20

            FRDButton:
                text: 'Back'
                size_hint: None, None
                size: 80, 40

                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = 'main'

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: 80

                Label:
                    text: 'Enter path to the FaceRig.exe\n(or direct path where the new items will be placed)'
                    text_size: self.width, None

                FRDTextInput:
                    id: path_input

                    hint_text: 'C:/Path/To/FaceRig/Bin'
                    pos_hint: {'center_y': .5}
                    size_hint: .6, None
                    height: 30

                CheckBox:
                    id: is_direct

                    size_hint_x: None
                    width: 10

                Label:
                    text: 'direct path'
                    size_hint_x: None
                    width: self.texture_size[0]

                FRDButton:
                    pos_hint: {'center_y': .5}
                    size_hint: None, None
                    size: 100, 40
                    text: 'Save path'

                    on_release:
                        app.path = path_input.text
                        if is_direct.active: app.is_direct = True
                        else: app.is_direct = False

                        root.save_path(app.path, app.is_direct)


# Widgets
<FRDButton>:
    # var w is used to scale button borders
    w: 2

    canvas:
        Color:
            rgba: app.pink
        Line:
            width: self.w
            joint: 'miter'
            rectangle: self.x + self.w, self.y + self.w, self.width - self.w * 2, self.height - self.w * 2

    background_normal: ''
    background_color: app.dark_purple


<FRDSpinnerOption>:
    canvas:
        Color:
            rgba: app.light_blue
        Line:
            points: self.pos[0], self.pos[1] + self.height, self.pos[0] + self.width, self.pos[1] + self.height

    background_normal: ''
    background_color: app.dark_purple
    font_size: 13
    height: 28


<FRDItem>:
    # todo parse info about every item size and place it near "add to collection" button
    # todo fix positioning of tiles if the title or author strings are too big
    # place your image here in case if the image or rating of item hasn't downloaded
    logo: 'img/noimg.gif' # can be a link
    rating: 'img/norating.png' # for example: 'https://images.com/img.png
    title: 'default title'
    author: 'default author'
    item_id: 0

    orientation: 'vertical'
    padding: 20
    size_hint_y: None
    height: self.minimum_height

    AsyncImage:
        source: root.logo
        size_hint_y: None
        height: self.width

    AsyncImage:
        source: root.rating
        size_hint: None, None
        height: 30

    Label:
        text: root.title
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        font_size: 18

    Label:
        text: root.author
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        color: [1] * 3 + [.6]

    # spacing widget
    Widget:
        size_hint_y: None
        height: 10

    FRDButton:
        text: 'Add to collection'
        size_hint_y: None
        height: 40

        on_release:
            print('id of the item: ', root.item_id)
            root.add_to_collection(app.path)


<FRDPopup>:
    text: 'Default Message'

    title: 'Default Title'
    title_size: 18
    separator_color: app.pink
    background: 'img/DB_color.png'
    size_hint: None, None
    size: 400, 140

    Label:
        text: root.text
        text_size: self.width, None


<FRDTextInput@TextInput>:
    background_color: app.dark_purple
    multiline: False
    foreground_color: [1] * 4
    cursor_color: app.pink
    hint_text: 'Default'
