# Screens
<FRDScreenManager>:
    FRDMain:
    FRDBrowse:


<FRDMain>:
    name: 'main'

    AnchorLayout:
        canvas.before:
            Color:
                rgb: app.dark_purple
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: [None, None]
            size: 450, 550
            spacing: 20

            Label:
                text: 'FaceRig Downloader'
                font_size: 45
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 10
                        origin: self.center
                canvas.after:
                    PopMatrix

            FRDButton:
                text: 'Browse some avatars'
                font_size: 25
                on_release:
                    app.root.transition.direction = 'left'
                    app.root.current = 'browse'

            FRDButton:
                text: 'Exit'
                font_size: 25
                on_release: app.stop()


<FRDBrowse>:
    name: 'browse'
    general_width: 750

    ScrollView:
        do_scroll_x: False
        scroll_timeout: 1000
        scroll_distance: 0
        scroll_wheel_distance: 40
        smooth_scroll_end: 10
        scroll_type: ['bars']
        bar_color: app.pink[:3] + [.9]
        bar_inactive_color: app.pink[:3] + [.2]
        bar_width: 8

        BoxLayout:
            id: container

            canvas.before:
                Color:
                    rgba: .4, .1, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 0, 80
            spacing: 20

            BoxLayout:
                id: control_panel

                canvas.before:
                    Color:
                        rgba: .1, .8, .4, .3
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: 50
                width: root.general_width

                FRDButton:
                    text: 'add an item to grid'
                    on_press: root.add_tile()

            GridLayout:
                id: items

                canvas.before:
                    Color:
                        rgba: .5, .1, .6, .3
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                height: self.minimum_height
                width: root.general_width
                cols: 3

                # little kludge to make first 2 tiles normal size
                Widget:
                Widget:
                Widget:


# Widgets
<FRDButton>:
    # var w is used to scale button borders
    w: 2

    canvas:
        Color:
            rgba: app.pink
        Line:
            width: self.w
            joint: 'miter'
            rectangle: self.x + self.w, self.y + self.w, self.width - self.w * 2, self.height - self.w * 2

    background_normal: ''
    background_color: app.dark_purple
